---
import { SECRET_KEY } from 'astro:env/server'
const currentPath = Astro.url
---
<section class="w-full min-h-screen flex flex-col justify-center items-center gap-5 pt-10" id="contact">
  <h1 class="text-danger text-3xl">Contact me</h1>
  <div class="flex flex-col md:flex-row gap-5 border-2 border-double border-bg_primary  bg-bg_secondary rounded-lg md:px-20 md:py-5 p-5">
    <div class="w-80 md:w-96 flex flex-col justify-center items-start gap-5">
      <span><span class="text-danger font-bold">Address _ </span>Salta, Argentina</span>
      <span><span class="text-danger font-bold">Phone _ </span>+54 3874824225</span>
      <span><span class="text-danger font-bold">Email _ </span>joamsmg@gmail.com</span>
    </div>
    <form action={`https://api.web3forms.com/submit`} method="POST" class="flex w-80 md:w-96 flex-col gap-2 ">
      <input
        type="text"
        name="name"
        id="name"
        placeholder="full name"
        class="p-2 rounded-md text-center outline-none placeholder:uppercase text-black placeholder:text-bg_primary"
        required
      />
      <input type="hidden" name="access_key" value={SECRET_KEY}>
      <input type="hidden" name="redirect" value=`${currentPath}success`>
      <input
        type="email"
        name="email"
        id="email"
        placeholder="email"
        class="p-2 rounded-md text-center outline-none placeholder:uppercase text-black placeholder:text-bg_primary"
        required
      />
      <textarea
        name="message"
        id="message"
        cols={30}
        rows={10}
        placeholder="message"
        class="p-2 rounded-md text-center outline-none placeholder:uppercase text-black placeholder:text-bg_primary resize-none"
        required></textarea>
        <div class="w-full flex justify-center items-center">
          <button type="submit" class="w-40 px-5 py-2 bg-bg_primary text-white font-bold rounded-lg hover:bg-accent transition-all duration-200" id="submit-button">Submit</button>
        </div>
    </form>
</div>

</section>