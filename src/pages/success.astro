---
import SuccessLayout from "../layouts/SuccessLayout.astro"

const originalPath = Astro.url.origin
---
<SuccessLayout title="Success page - Thanks for contacting me">
  <div class="w-full min-h-screen flex justify-center items-center">
    <div class="flex flex-col items-center gap-4 border-4 border-double rounded-lg p-10 bg-bg_secondary">
      <h1 class="text-3xl text-center">Thanks for contacting me!</h1>
      <h3 class="text-xl text-center">I will asnwer you soon as possible</h3>
      <a href="/" class="p-2 flex flex-row justify-center items-center gap-2 bg-accent  font-bold rounded-lg"><img src="/icons/arrow-left.svg" alt="arrow-left icon" class="w-4">Go back</a>
    </div>
  </div>
</SuccessLayout>
